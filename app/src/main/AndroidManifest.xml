<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.yc.clanapp.TestApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClanApp"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:theme">
        
        <!-- 首页（启动页） -->
        <activity
            android:name="com.yc.home.ui.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ClanApp"
            tools:replace="android:theme,android:exported">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 登录页 (Compose 版) -->
        <activity
            android:name="com.yc.auth.ui.activity.LoginComposeActivity"
            android:exported="false"
            android:theme="@style/Theme.ClanApp"
            tools:replace="android:theme,android:exported" />
        
        <!-- 登录页 (旧版) -->
        <activity
            android:name="com.yc.auth.ui.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ClanApp"
            tools:replace="android:theme,android:exported" />
        
        <!-- 测试页面（保留用于调试） -->
        <activity
            android:name="com.yc.clanapp.MainActivity"
            android:exported="false" />
        
    </application>

</manifest>