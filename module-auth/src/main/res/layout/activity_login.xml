<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>
        <variable
            name="vm"
            type="com.yc.auth.ui.viewmodel.LoginViewModel" />
    </data>

    <!-- 浅白乳色背景 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA">

        <!-- 主容器 - 飞书风格 -->
        <LinearLayout
            android:id="@+id/container_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="32dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_container">

                <!-- 返回按钮 - 放在顶部右上角 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    
                    <!-- 暂时不想登录 - 左上角 -->
                    <TextView
                        android:id="@+id/tv_skip_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="暂时不想登录"
                        android:textColor="#8A8A8A"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    
                    <!-- 关闭按钮 - 右上角 -->
                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_close"
                        app:tint="#8A8A8A"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Logo区域 - 飞书风格 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp">

                    <!-- Logo图标 -->
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_sect_logo" />

                    <!-- 应用名称 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="异界来客"
                        android:textColor="#1A1A1A"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- 副标题 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欢迎回来，请登录您的账号"
                        android:textColor="#8A8A8A"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 用户名输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_username"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="请输入邮箱或用户名"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#4B5563"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#6B7280"
                    app:startIconDrawable="@drawable/ic_person_outline"
                    app:startIconTint="#6B7280">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:text="@{vm.username}"
                        android:hint="请输入邮箱或用户名"
                        android:textColor="#1A1A1A"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 密码输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="请输入密码"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#4B5563"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#6B7280"
                    app:hintTextColor="#6B7280"
                    app:startIconDrawable="@drawable/ic_lock_outline"
                    app:startIconTint="#6B7280">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textPassword"
                        android:text="@{vm.password}"
                        android:hint="请输入密码"
                        android:textColor="#1A1A1A"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 忘记密码链接 -->
                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="24dp"
                    android:padding="8dp"
                    android:text="忘记密码？"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <!-- 错误信息显示 -->
                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#FFEEEE"
                    android:padding="12dp"
                    android:text="登录失败，请检查您的账号密码"
                    android:textColor="#E74C3C"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- 登录按钮 - 飞书风格 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="登录"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="26dp"
                    app:elevation="0dp" />

                <!-- 或 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="或"
                        android:textColor="#B2BEC3"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />
                </LinearLayout>

                <!-- 邮箱登录和微信登录 - 使用之前样式 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="邮箱登录"
                        android:textColor="#2D3436"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_email_outline"
                        app:iconGravity="textStart"
                        app:iconTint="#4CAF50"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="微信登录"
                        android:textColor="#2D3436"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_play_outline"
                        app:iconGravity="textStart"
                        app:iconTint="#4CAF50"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </LinearLayout>

        <!-- 注册提示 - 底部 -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有账号？"
                android:textColor="#8A8A8A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:text="立即注册"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>